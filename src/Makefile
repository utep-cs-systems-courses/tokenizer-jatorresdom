# Comments begin with #
# Define variable $(OBJS) to list of object files

OBJS= uiMain.o tokenizer.o history.o

# Compiler flags

CFLAGS=-g -O3 # -g for debug, -O3 for optimization

# First target is built by default. Usually named "all"

all: tokenizer

# tokenizer (target) depends on all object files (prerequisites)

tokenizer: $(OBJS)

	cc -o tokenizer $(CFLAGS) $(OBJS)

# All object files built from C files that include tokenizer.h and history.h

$(OBJS): tokenizer.h history.h

# Deletes files generated by compilation
clean:

	rm -f *.o tokenizer
	rm -f *~ tokenizer

run:tokenizer

	./tokenizer

